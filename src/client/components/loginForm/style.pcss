@import "../../style/defs.pcss";

.login-form {
  display: flex;
  flex: 1 0 auto;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  label,
  input {
    display: block;
  }

  input {
    &[type="submit"] {
      margin-top: 0.5rem;
      width: 100%;
    }

    &.has-error {
      color: #000;
    }
  }
}
